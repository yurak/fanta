.page-block
  - if user_signed_in?
    .web-header= render 'layouts/left_nav', league: nil
    .mob-header= render 'layouts/mob_header', league: nil, title: t('welcome.contact.title')
  - else
    = render 'layouts/header'
  .rules-page.contact-page{ class: "rules-user-#{user_signed_in?}"}
    .contact-title.rules-title
      .rules-title-icon ðŸ“¬
      .rules-title-text= t('welcome.contact.title')
    .contact-content
      .contact-block
        .contact-text= t('welcome.contact.ask')
        .contact-links
          .social-media-link
            = link_to 'https://t.me/mantra_help', target: '_blank' do
              = image_tag('social_media/tg_col.png')
          .social-media-link
            = mail_to 'mantrafootball.info@gmail.com', target: '_blank' do
              = image_tag('social_media/gmail_col.png')
      .contact-block
        .contact-text= t('welcome.contact.follow')
        .contact-links
          .social-media-link
            = link_to 'https://t.me/mantrafootball', target: '_blank' do
              = image_tag('social_media/tg_col.png')
          .social-media-link
            = link_to 'https://www.instagram.com/mantrafootball', target: '_blank' do
              = image_tag('social_media/insta_col.png')
          .social-media-link
            = link_to 'https://www.facebook.com/mantrafootball', target: '_blank' do
              = image_tag('social_media/fb_col.png')
  = render 'layouts/footer'
