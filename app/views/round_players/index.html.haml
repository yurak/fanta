.page-header
  .page-header-icon
    = image_tag('navbar/stats.png')
  .page-header-title
    %span.bolder Statistics
    | Round
    %span.bolder
      = tournament_round.number
      -# TODO: add tournament_round#show page - show all tours of this round
      -#= link_to tournament_round.number, tournament_round_path(tournament_round)
.page-info
  .list-items.list-action-items.center
    .list-row-item
      .list-row-cell
      -#  %select{onchange: "location = this.value;", class: 'dark-select'}
      -#    %option{selected: true, disabled: true}= 'TEAM'
      -#    - @teams.each do |team|
      -#      %option{value: tournament_round_round_players_path(tour, team: team.id)}= team.human_name
      .list-row-cell
        = link_to 'ALL PLAYERS', tournament_round_round_players_path(tournament_round)
      .list-row-cell
        %select{onchange: "location = this.value;"}
          %option{selected: true, disabled: true}= 'POSITION'
          - @positions.each do |position|
            %option{value: tournament_round_round_players_path(tournament_round, position: position.name)}= position.name
  .list-items.stats-headers.center
    .results-header-cell #
    .results-header-cell
      = link_to 'Club', tournament_round_round_players_path(tournament_round, order: 'club', position: params['position'])
    .results-header-cell
      = link_to 'Name', tournament_round_round_players_path(tournament_round, order: 'name', position: params['position'])
    .results-header-cell Position
    .results-header-cell.player-stats-headers
      .player-stat-header= link_to 'BS', tournament_round_round_players_path(tournament_round, order: 'base_score', position: params['position'])
    .results-header-cell.player-stats-headers
      .player-stat-header= link_to 'TS', tournament_round_round_players_path(tournament_round, order: 'total_score', position: params['position'])
  .list-items.list-items-dark.stats-players.center
    - @players.each_with_index do |player, i|
      .list-row-item
        .list-row-cell= i+1
        .list-row-cell.player-icons
          .club-logo.l-details-club-logo
            = image_tag(player.club.logo_path, alt: 'Club Logo')
        .list-row-cell
          = link_to player.name.upcase, player_path(player.player)
        .list-row-cell.position-cell.team-pl-positions
          - player.positions.each do |position|
            .position-image.inline-block
              = image_tag("positions/#{position.name}.png")
        .list-row-cell
          .player-param= player.score
        .list-row-cell.player-result-score
          .player-param= player.result_score
