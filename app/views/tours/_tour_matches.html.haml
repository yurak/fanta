.tours-block
  .current-tour-data
    .tour-info
      .tour-date
        = "Tour ##{tour.number}"
      .tour-deadline
        = "Deadline - #{tour.deadline&.strftime("%H:%M %d/%m/%y")}"
        = link_to "Edit", edit_tour_path(tour) unless tour.closed?
    .close-tour-btn
      - if current_user.admin?
        = link_to "Lock Tour", tour_change_status_path(tour, status: :locked), class: 'btn btn-danger', data: { confirm: 'Are you sure?' } if tour.set_lineup?
        = link_to "Close Tour", tour_change_status_path(tour, status: :closed), class: 'btn btn-danger', data: { confirm: 'Are you sure?' } if tour.locked?
- tour.matches.each do |match|
  .alert.alert-primary.tour-alert
    .card.match-team-card
      .card-body
        .card-title.team-tour-card
          .match-team-logo.team-tour-info-block
            %img{alt: "Logo", src: image_path(match.host.logo_path)}
          .team-tour-info.team-tour-info-block
            .team-link
              = link_to match.host.name.titleize, team_path(match.host.id)
            %p.team-tour-module
              = match.host_lineup ? match.host_lineup.team_module.name : 'waiting for lineup'
          .team-tour-result.team-tour-info-block
            - if match.host_lineup
              = link_to team_lineup_path(match.host, match.host_lineup) do
                %p.team-tour-goals
                  = match.host_lineup.goals
                %p.team-tour-points
                  = pluralize(match.host_lineup.total_score, 'point')
            - else
              %p.team-tour-goals -
              %p.team-tour-points ---
    .card.match-team-card
      .card-body
        .card-title.team-tour-card
          .match-team-logo.team-tour-info-block
            %img{alt: "Logo", src: image_path(match.guest.logo_path)}
          .team-tour-info.team-tour-info-block.team-tour-info-guest
            .team-link
              = link_to match.guest.name.titleize, team_path(match.guest.id)
            %p.team-tour-module
              = match.guest_lineup ? match.guest_lineup.team_module.name : 'waiting for lineup'
          .team-tour-result.team-tour-info-block
            - if match.guest_lineup
              = link_to team_lineup_path(match.guest, match.guest_lineup) do
                %p.team-tour-goals
                  = match.guest_lineup.goals
                %p.team-tour-points
                  = pluralize(match.guest_lineup.total_score, 'point')
            - else
              %p.team-tour-goals -
              %p.team-tour-points ---
