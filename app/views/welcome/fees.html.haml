:javascript
  $(document).ready(function() {
    $("#old-discount").click(function(){
      $("#old-discount").addClass("slider-active");
      $("#new-discount").removeClass("slider-active");
      $(".new-discount").hide();
      $(".old-discount").show();
    });
    $("#new-discount").click(function(){
      $("#new-discount").addClass("slider-active");
      $("#old-discount").removeClass("slider-active");
      $(".old-discount").hide();
      $(".new-discount").show();
    });
  });
