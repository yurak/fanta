.page-header
  .page-header-icon
    = image_tag('navbar/stats.png')
  .page-header-title
    %span.bolder Statistics
    | Round
    %span.bolder
      = link_to tour.number, tour_path(tour)
.page-info
  .list-items.list-action-items.center
    .list-row-item
      .list-row-cell
      -#  %select{onchange: "location = this.value;", class: 'dark-select'}
      -#    %option{selected: true, disabled: true}= 'TEAM'
      -#    - @teams.each do |team|
      -#      %option{value: tour_match_players_path(tour, team: team.id)}= team.human_name
      .list-row-cell
        = link_to 'ALL PLAYERS', tour_match_players_path(tour)
      .list-row-cell
        %select{onchange: "location = this.value;"}
          %option{selected: true, disabled: true}= 'POSITION'
          - @positions.each do |position|
            %option{value: tour_match_players_path(tour, position: position.name)}= position.name
  .list-items.stats-headers.center
    .results-header-cell #
    .results-header-cell
      = link_to 'Club', tour_match_players_path(tour, order: 'club', position: params['position'])
    .results-header-cell
      = link_to 'Name', tour_match_players_path(tour, order: 'name', position: params['position'])
    .results-header-cell Position
    .results-header-cell.player-stats-headers
      .player-stat-header= link_to 'BS', tour_match_players_path(tour, order: 'base_score', position: params['position'])
      .player-stat-header= link_to 'TS', tour_match_players_path(tour, order: 'total_score', position: params['position'])
    .results-header-cell Team
  .list-items.list-items-dark.stats-players.center
    - @players.each_with_index do |player, i|
      .list-row-item
        .list-row-cell= i+1
        .list-row-cell.player-icons
          .club-logo.l-details-club-logo
            = image_tag(player.club.logo_path, alt: 'Club Logo')
        .list-row-cell
          = link_to player.name.upcase, player_path(player.player)
        .list-row-cell.position-cell
          .slot-position{class: "slot-position-#{player.real_position.tr('/', '')}"}
            = player.real_position
        .list-row-cell.player-stats
          .player-param= player.score
          .player-param= player.total_score
        .list-row-cell.player-icons
          .club-logo.l-details-club-logo
            = image_tag(player.team_by(tour.league).logo_path, alt: 'Team Logo')
