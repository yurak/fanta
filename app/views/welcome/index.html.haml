      .slogan-start
        = t('welcome.index.slogan1')
      .slogan-end
        = t('welcome.index.slogan2')
    .mantra-section-actions
      = link_to new_user_session_path do
        .grey-btn.landing-action.landing-action-login= t('header.login')
      = link_to new_join_request_path do
        .blue-btn.landing-action.landing-action-start= t('header.start_playing')
    .mantra-section-images
      .mantra-section-image-field
        = image_tag('landing/field.svg', alt: 'Field')
      .mantra-section-image-team
        = image_tag('landing/team.png', alt: 'Team')
  .what-is-section
    .what-is-title= t('welcome.index.what_is.mantra')
    .what-is-content
      .what-is-left
        .what-is-left-title= t('welcome.index.what_is.subtitle')
        .what-is-item
          .what-is-item-icon üòé
          .what-is-item-text
            .what-is-item-title= t('welcome.index.what_is.friends')
            .what-is-item-description= t('welcome.index.what_is.friends_text')
