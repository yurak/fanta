= render 'layouts/header'
.landing-page
  .mantra-section
    .mantra-section-title
      .mantra-section-title-stroke MANTRA
      .mantra-section-title-main MANTRA
    .mantra-section-slogan
      .slogan-start
        = t('welcome.index.slogan1')
      .slogan-end
        = t('welcome.index.slogan2')
    .mantra-section-actions
      = link_to new_user_session_path do
        .grey-btn.landing-action.landing-action-login= t('header.login')
