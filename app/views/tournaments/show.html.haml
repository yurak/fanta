.page-info.tournament-page
  .tournament-head
    .tournament-logo= image_tag(tournament.logo_path)
    .tournament-title
      = tournament.name
  .tournaments-fixture
    - national_fixtures.each do |t_round, matches|
      .round-title
        = "Round ##{t_round.number}"
      .round-matches
        - matches.each do |match|
          .round-tournament-match
            .round-tournament-match-cell.round-tournament-match-team
              .round-tournament-team-name
                = match.host_team.name
              .round-tournament-team-logo
                = flag_icon(match.host_team.code.to_sym, element: :div)
            .round-tournament-match-cell
              - if match.host_score
                .round-tournament-match-result
                  .round-tournament-match-result-host= match.host_score
                  .round-tournament-match-result-guest= match.guest_score
              - else
                vs
            .round-tournament-match-cell.round-tournament-match-team.round-tournament-match-guest
              .round-tournament-team-logo
                = flag_icon(match.guest_team.code.to_sym, element: :div)
              .round-tournament-team-name
                = match.guest_team.name
    - fixtures.each do |t_round, matches|
      .round-title
        = "Round ##{t_round.number}"
      .round-matches
        - matches.each do |match|
          .round-tournament-match
            .round-tournament-match-cell.round-tournament-match-team
              .round-tournament-team-name
                = match.host_club.name
              .round-tournament-team-logo
                = image_tag(image_path(match.host_club.logo_path))
            .round-tournament-match-cell
              - if match.host_score
                .round-tournament-match-result
                  .round-tournament-match-result-host= match.host_score
                  .round-tournament-match-result-guest= match.guest_score
              - else
                vs
            .round-tournament-match-cell.round-tournament-match-team.round-tournament-match-guest
              .round-tournament-team-logo
                = image_tag(image_path(match.guest_club.logo_path))
              .round-tournament-team-name
                = match.guest_club.name
