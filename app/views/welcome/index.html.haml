      .better-item
        .better-item-title= t('welcome.index.better.item6_title')
        .better-item-text= t('welcome.index.better.item6_text')
      .better-item
        .better-item-title= t('welcome.index.better.item7_title')
        .better-item-text= t('welcome.index.better.item7_text')
    .better-links
      .better-link-title= t('welcome.index.better.link_title')
      .better-link= link_to t('welcome.index.better.link1'), rules_path
      .better-link= link_to t('welcome.index.better.link2'), ''
  .start-section
    .start-title= t('welcome.index.start.title')
    .start-content
      .start-left
        #step-item1.step-item.step-active
          .step-number= t('welcome.index.start.step1')
          .step-title= t('welcome.index.start.step1_title')
        #step-item2.step-item
          .step-number= t('welcome.index.start.step2')
          .step-title= t('welcome.index.start.step2_title')
        #step-item3.step-item
          .step-number= t('welcome.index.start.step3')
          .step-title= t('welcome.index.start.step3_title')
        #step-item4.step-item
          .step-number= t('welcome.index.start.step4')
          .step-title= t('welcome.index.start.step4_title')
        #step-item5.step-item
          .step-number= t('welcome.index.start.step5')
          .step-title= t('welcome.index.start.step5_title')
        .start-btn.grey-btn
          = link_to t('header.start_playing'), new_join_request_path
      .start-right
  .tournaments-section
    .tournaments-season= "#{t('welcome.index.tournaments.season')} #{Season.last.start_year.to_s[2..3]}/#{Season.last.end_year.to_s[2..3]}"
    .tournaments-current= t('welcome.index.tournaments.current')
    .tournaments-desc= t('welcome.index.tournaments.desc')
    .tournaments-row
      - active_tournaments.each do |tournament|
        .tournament-item
          .tournament-logo= image_tag(tournament.logo_path, alt: 'Tournament Logo')
          .tournament-name= tournament.name
  .people-section
    .people-say= t('welcome.index.people.say')
    .people-love= t('welcome.index.people.love')
    .people-content
      .people-response
        .people-quotes= image_tag('landing/quotes.svg', alt: 'Quotes')
        .people-citation= t('welcome.index.people.citation')
        .people-author
          .people-author-smile üòé
          .people-author-data
            .people-author-name= t('welcome.index.people.name')
            .people-author-team= t('welcome.index.people.team')
      .people-numbers
        .people-numbers-title= t('welcome.index.people.numbers')
        .people-numbers-item
          .people-number= Tour.closed.count
          .people-number-text= t('welcome.index.people.rounds')
        .people-numbers-item
          .people-number= Auction.closed.count
          .people-number-text= t('welcome.index.people.auctions')
        .people-numbers-item
          .people-number 94%
          .people-number-text= t('welcome.index.people.users')
  .lets-section
    .lets-text= t('welcome.index.lets')
    .lets-text= t('welcome.index.lets_begin')
    .lets-btn.grey-btn
      = link_to t('header.start_playing'), new_join_request_path
    .lets-img
      = image_tag('landing/manager.png', alt: 'Manager')
