      <table align="center" border="0" cellpadding="0" cellspacing="0" style="width:100%; max-width:620px; margin-top:32px; text-align:left;background:#fff;border:0;border-left:0px solid #ccc;border-right:0px solid #ccc">
        <tbody>
        <tr>
          <td style="background:#eee">
            <table border="0" cellpadding="0" cellspacing="0" style="width:100%;">
              <tbody>
              <tr>
                <td style="width:20px;background:#eee"></td>
                <td style="background-color:#fff;font-family:Helvetica,Arial,sans-serif;font-size:16px;line-height:20px;color:#2A304A;border-radius:8px;" valign="top">
                  <table border="0" cellpadding="0" cellspacing="0" width="100%">
                    <tbody>
                    <tr>
                      <td style="width:30px; background-color:#FDFDFE; border-bottom:1px solid #F0F0F0; border-top-left-radius:8px;"></td>
