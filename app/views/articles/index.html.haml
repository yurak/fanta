.page-header
  .page-header-icon
    = image_tag('navbar/news.png')
  .page-header-title News
.page-info
  .articles-block
    - @articles.each do |article|
      .article-item
        = link_to article do
          .article-block
            .article-image
              = image_tag(article.image)
            .article-data
              .article-title
                %h3= article.title
              .article-summary
                %h5= article.summary
