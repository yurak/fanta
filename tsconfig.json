{
  "compilerOptions": {
    "lib": ["ESNext", "dom"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ES6",
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "baseUrl": "./app/client",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["./app/client/**/*"],
  "exclude": ["node_modules/**/*"]
}
