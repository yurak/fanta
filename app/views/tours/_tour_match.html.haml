.list-row-item
  -# TODO: add link to match host team
  .list-row-cell.tour-host
    = link_to team_path(match.host) do
      .tour-team-logo
        = image_tag(match.host&.logo_path, alt: 'Team Logo')
      .tour-team-name
        = match.host.code_name
  .list-row-cell
    - if match.host_lineup
      .tour-team-points
        = link_to team_lineup_path(match.host, match.host_lineup) do
          .team-tour-score
            = match.host_lineup.total_score
          .team-tour-players{class: lineup_class(match.host_lineup.completed?)}
            = "(#{match.host_lineup.mp_with_score})"
    - elsif current_user == match.host.user && tour.set_lineup?
      = link_to 'create', new_team_lineup_path(match.host), class: 'add-lineup-tour'
  .list-row-cell.tour-result
    - if match.tour.deadlined?
      -# TODO: add link to match details
      .tour-host-result
        = match.host_lineup&.goals
      .tour-vs -
      .tour-guest-result
        = match.guest_lineup&.goals
  .list-row-cell
    - if match.guest_lineup
      .tour-team-points
        = link_to team_lineup_path(match.guest, match.guest_lineup) do
          .team-tour-score
            = match.guest_lineup.total_score
          .team-tour-players{class: lineup_class(match.guest_lineup.completed?)}
            = "(#{match.guest_lineup.mp_with_score})"
    - elsif current_user == match.guest.user
      = link_to 'create', new_team_lineup_path(match.guest), class: 'add-lineup-tour'
  .list-row-cell.tour-guest
    = link_to team_path(match.guest) do
      .tour-team-name
        = match.guest.code_name
      .tour-team-logo
        = image_tag(match.guest&.logo_path, alt: 'Team Logo')
