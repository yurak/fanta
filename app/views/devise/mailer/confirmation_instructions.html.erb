                  <div style="margin-bottom:14px; font-size:1px;">
                    <%= mail_to 'mantrafootball.info@gmail.com', target: '_blank', style: "display:inline-block; margin: 0 6px;" do %>
                      <%= image_tag ActionController::Base.helpers.asset_path('social_media/gmail_col.png'), alt: '', size: "24x24", style: 'text-decoration: none;', skip_pipeline: true %>
                    <% end %>
                    <%= link_to 'https://t.me/mantra_help', target: '_blank', style: "display:inline-block; margin: 0 6px;" do %>
                      <%= image_tag ActionController::Base.helpers.asset_path('social_media/tg_col.png'), alt: '', size: "24x24", style: 'text-decoration: none;', skip_pipeline: true %>
                    <% end %>
                  </div>
                  <div style="margin-bottom:46px;">
                    <%= "Â© #{Date.current.year} MantraFootball" %>
