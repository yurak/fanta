  .better-section
    .better-title1= t('welcome.index.better.than')
    .better-title2= t('welcome.index.better.classic')
    .better-diff= t('welcome.index.better.key_diff')
    .better-items-list
      .better-item
        .better-item-title= t('welcome.index.better.item1_title')
        .better-item-text= t('welcome.index.better.item1_text')
